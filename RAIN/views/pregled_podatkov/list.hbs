<script>
    var delo = 0;
    var tovornjaki = 0;
    var vreme = 0;
    var ovire = 0;
</script>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Cesta</th>
      <th scope="col">Lokacija</th>
      <th scope="col">Vzrok</th>
    </tr>
  </thead>
  <tbody>
    {{#each this}}
    <script>
        if("{{vzrok}}" == " Delo"){
            delo++;
        }else if("{{vzrok}}" == " Tovornjaki"){
            tovornjaki++;
        }else if("{{vzrok}}" == " Vreme"){
            vreme++;
        }else if("{{vzrok}}" == " Ovire"){
            ovire++;
        }
    </script>
    <tr>
        <td>{{cesta}}</td>
        <td>{{lokacija}}</td>
        <td>{{vzrok}}</td>
    </tr>
    {{/each}}   
  </tbody>
</table>

<canvas id="myChart" width="1500px" height="600px"></canvas>
<script>
var ctx = document.getElementById('myChart').getContext('2d');
var myChart = new Chart(ctx, {
    type: 'pie',
    data: {
        labels: ['Delo', 'Ovire', 'Vreme', 'Tovornjaki'],
        datasets: [{
            label: '# of Votes',
            data: [delo, ovire, vreme, tovornjaki],
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero: true
                }
            }]
        }
    }
});
</script>